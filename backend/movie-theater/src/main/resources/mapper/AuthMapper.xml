<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.my.movietheater.auth.mapper.AuthMapper">

    <!--
        ADMIN 로그인용 사용자 조회
        - email 기준
        - password + role 조회
    -->
    <select id="selectUserForLogin"
            parameterType="string"
            resultType="com.my.movietheater.auth.dto.LoginResponseDto">

        SELECT
            user_id,
            email,
            password,
            role
        FROM users
        WHERE email = #{email}

    </select>

</mapper>
